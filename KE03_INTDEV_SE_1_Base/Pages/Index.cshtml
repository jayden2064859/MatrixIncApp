@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>

    body, html {
        margin: 0;
        padding: 0;
        width: 100%;
        overflow-x: hidden; /* Voorkom horizontale scroll */
    }
    /* Hero sectie met video-achtergrond */
    .hero-container {
        position: relative;
        width: 110vw;
        height: 90vh;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        padding: 0;
        left: 50%;
        transform: translateX(-50%);
    }

    /* Video achtergrond */
    .hero-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
        min-width: 100%;
    }

    /* Donkere overlay voor betere zichtbaarheid (optioneel) */
    .video-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.3);
        z-index: 0;
    }
</style>


<div class="hero-container">
    <!-- Bewegende achtergrond video -->
    <video autoplay muted loop class="hero-video">
        <source src="~/videos/Matrix-new.mp4" type="video/mp4">
        <!-- Fallback als video niet werkt -->
        <img src="~/images/matrixlogo3.jpg" alt="Fallback image">
    </video>
    <!-- Donkere overlay (optioneel) -->
    <div class="video-overlay"></div>
</div>

